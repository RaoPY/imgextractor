<style>
    body {
        margin: 0;
        padding: 0;
        font-family: Arial, Helvetica, sans-serif;
        background: #e9e9e9;
    }
    .containerForm, .containerImages {
        margin: auto;
        width: 90%;
        overflow: auto;
    }
    h1 {
        text-transform: uppercase;
        margin-top: 5vh;
        margin-bottom: 10px;
    }
    h1, form {
        text-align: center;
    }
    input {
        padding: 12px;
        width: 50%;
        border: none;
        color: #555555;
        border: lightgray 1px solid;
        border-radius: 3px;
    }
    input:focus {
        outline: none;
    }
    button {
        padding: 11px;
        width: 100px;
        border: none;
        border-radius: 3px;
        font-size: 1rem;
        background: #39a2db;
        color: white;
        margin-top: 10px;
    }
    button:hover {
        cursor: pointer;
        background: #248bc2;
    }
    hr {
        width: 90%;
        margin: 25px auto;
        opacity: 0.5;
    }
    .image {
        margin: 5px;
        border: white 5px solid;
        border-radius: 3px;
        transition: 0.3s;
    }
    .image:hover {
        transform: scale(1.05);
        box-shadow: 0px 0px 10px gray;
    }
</style>